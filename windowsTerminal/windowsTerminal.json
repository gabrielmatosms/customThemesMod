{
    "$schema": "https://aka.ms/terminal-profiles-schema",
    "actions": 
    [
        {
            "command": 
            {
                "action": "copy",
                "singleLine": false
            },
            "keys": "ctrl+c"
        },
        {
            "command": "find",
            "keys": "ctrl+shift+f"
        },
        {
            "command": "paste",
            "keys": "ctrl+v"
        },
        {
            "command": 
            {
                "action": "splitPane",
                "split": "auto",
                "splitMode": "duplicate"
            },
            "keys": "alt+shift+d"
        }
    ],
    "copyFormatting": "none",
    "copyOnSelect": false,
    "defaultProfile": "{*DEFAULT ID*}",
    "initialCols": 100,
    "initialRows": 20,
    "profiles": 
    {
        "defaults": 
        {
            "colorScheme": "Hyper",
            "cursorShape": "filledBox"
        },
        "list": 
        [
            {
                "commandline": "powershell.exe",
                "guid": "{*YOUR TERMINAL ID*}",
                "hidden": false,
                "name": "Windows PowerShell"
            },
            {
                "commandline": "cmd.exe",
                "guid": "{*YOUR TERMINAL ID*}",
                "hidden": false,
                "name": "Prompt de comando"
            },
            {
                "guid": "{*YOUR TERMINAL ID*}",
                "hidden": true,
                "name": "Azure Cloud Shell",
                "source": "Windows.Terminal.Azure"
            },
            {
                "guid": "{*YOUR TERMINAL ID*}",
                "hidden": false,
                "name": "Ubuntu",
                "source": "Windows.Terminal.Wsl"
            }
        ]
    },
    "schemes": 
    [
        {
            "name": "Hyper",
            "black": "#1c1c1c",
            "red": "#ff3d3d",
            "green": "#33FF00",
            "yellow": "#FEFF00",
            "blue": "#6396fc",
            "purple": "#CC00FF",
            "cyan": "#00FFFF",
            "white": "#D0D0D0",
            "brightBlack": "#808080",
            "brightRed": "#f35252",
            "brightGreen": "#33FF00",
            "brightYellow": "#FEFF00",
            "brightBlue": "#6396fc",
            "brightPurple": "#CC00FF",
            "brightCyan": "#00FFFF",
            "brightWhite": "#f5f5f5",
            "background": "#2a2a2a",
            "foreground": "#FFFFFF",
            "selectionBackground": "#f3e2f2",
            "cursorColor": "#cacaca"
          }
    ]
}